<configuration>
  <!-- Simple console-only logging for Native Image compatibility -->
  <!-- SiftingAppender is NOT compatible with GraalVM Native Image -->

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Application loggers - DEBUG mode for troubleshooting -->
  <logger name="ca.bc.gov.nrs.vdyp.batch" level="DEBUG" />
  <logger name="ca.bc.gov.nrs.vdyp" level="DEBUG" />

  <!-- Spring Boot and Spring Framework - DEBUG mode -->
  <logger name="org.springframework.boot" level="DEBUG" />
  <logger name="org.springframework.aot" level="DEBUG" />
  <logger name="org.springframework.context" level="DEBUG" />
  <logger name="org.springframework.batch" level="DEBUG" />

  <!-- Show AOT initialization details -->
  <logger name="org.springframework.boot.SpringApplication" level="DEBUG" />

  <root level="DEBUG">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>
