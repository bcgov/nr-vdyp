<configuration>
  <!-- Console appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- File appender -->
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>C:\Projects\nr-vdyp\batch\logs\vdyp-batch-debug.log</file>
    <append>false</append>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Application loggers -->
  <logger name="ca.bc.gov.nrs.vdyp.batch" level="DEBUG" />
  <logger name="ca.bc.gov.nrs.vdyp" level="OFF" />

  <!-- Spring Boot and Spring Framework -->
  <logger name="org.springframework.boot" level="WARN" />
  <logger name="org.springframework.aot" level="WARN" />
  <logger name="org.springframework.context" level="WARN" />
  <logger name="org.springframework.batch" level="WARN" />

  <!-- Show AOT initialization details -->
  <logger name="org.springframework.boot.SpringApplication" level="WARN" />

  <root level="WARN">
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="FILE" />
  </root>
</configuration>
